@model UCMS.Models.Domain.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input type="text" asp-for="CourseName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CourseDurationInYears" class="control-label"></label>
                <input type="number" asp-for="CourseDurationInYears" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Batch" class="control-label"></label>
                <select asp-for="Batch" class="form-control">
                    <option value="">Select Batch</option>
                    <option value="January">January</option>
                    <option value="July">July</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input type="number" asp-for="Year" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
